<div class="container mt-4">
  <div class="row">

    <!-- üîπ Contenedor principal del art√≠culo (8 columnas en pantallas grandes) -->
    <div class="col-lg-8">

      <!-- üîπ Informaci√≥n sobre el autor y la fecha -->
      <p class="text-muted">
        Publicado
        <a href="/articles?date=<%= new Date(data.publishDate).toLocaleDateString('es-ES') %>">
          <%= new Date(data.publishDate).toLocaleDateString('es-ES') %>
        </a>
        por el usuario
        <a href="/users/<%= data.userId %>">
          <%= data.author ? data.author.username : 'An√≥nimo' %>
        </a>
      </p>

      <!-- üî• Estado del post -->
      <p class="text-muted">
        Estado del post:
        <% if (postStatus === 'draft') { %>
          <span class="badge bg-warning text-dark">Borrador</span>
        <% } else { %>
          <span class="badge bg-success">Publicado</span>
        <% } %>
      </p>

      <!-- üî• Likes y Favoritos -->
      <div class="d-flex align-items-center mb-3">
        <!-- Bot√≥n de Like -->
        <form action="/post/<%= data._id %>/like" method="POST" class="me-3">
          <button type="submit" class="btn btn-sm <%= isLiked ? 'btn-danger' : 'btn-outline-danger' %>">
            <%= isLiked ? 'üíñ Quitar Like' : 'ü§ç Dar Like' %>
          </button>
          <span><%= likesCount %> Likes</span>
        </form>

        <!-- Bot√≥n de Favorito -->
        <form action="/post/<%= data._id %>/favorite" method="POST">
          <button type="submit" class="btn btn-sm <%= isFavorited ? 'btn-warning' : 'btn-outline-warning' %>">
            <%= isFavorited ? '‚≠ê Quitar de Favoritos' : '‚òÜ Guardar en Favoritos' %>
          </button>
          <span><%= favoritesCount %> Favoritos</span>
        </form>
      </div>

      <!-- üîπ Contenedor oculto con el contenido Markdown -->
      <div id="article-body" data-body="<%= encodeURIComponent(data.body) %>"></div>

      <!-- üîπ Renderizaci√≥n del contenido en HTML -->
      <div class="article-body border rounded p-4" id="rendered-article-body"></div>

      <hr>

      <a href="/" class="btn btn-primary mt-3">Volver al inicio</a>

      <hr>

      <!-- üîπ Secci√≥n de Comentarios -->
      <h3>Comentarios</h3>

      <% if (comments.length > 0) { %>
        <ul class="list-group">
          <% function renderComments(comments, level = 0) { %>
            <% comments.forEach(comment => { %>
              <li class="list-group-item" style="margin-left: <%= level * 30 %>px;">
                <strong><%= comment.author %></strong>
                <span class="text-muted small"> - <%= new Date(comment.createdAt).toLocaleDateString('es-ES') %></span>
                <p class="mt-1"><%= comment.body %></p>

                <!-- Bot√≥n para responder -->
                <button class="btn btn-sm btn-link text-primary" onclick="toggleReplyForm('<%= comment._id %>')">Responder</button>

                <!-- Formulario de respuesta -->
                <form id="reply-form-<%= comment._id %>" action="/post/<%= data._id %>/comment" method="POST" class="mt-2 d-none">
                  <input type="hidden" name="parentId" value="<%= comment._id %>">
                  <div class="mb-2">
                    <input type="text" class="form-control" name="author" placeholder="Tu nombre" required>
                  </div>
                  <div class="mb-2">
                    <textarea class="form-control" name="body" placeholder="Escribe tu respuesta..." rows="2" required></textarea>
                  </div>
                  <button type="submit" class="btn btn-sm btn-primary">Enviar Respuesta</button>
                </form>

                <!-- Renderizar respuestas de manera recursiva -->
                <% if (comment.replies && comment.replies.length > 0) { %>
                  <ul class="list-group mt-2">
                    <%= renderComments(comment.replies, level + 1) %> 
                  </ul>
                <% } %>
              </li>
            <% }) %>
          <% } %>

          <%= renderComments(comments) %>
        </ul>
      <% } else { %>
        <p class="text-muted">No hay comentarios a√∫n.</p>
      <% } %>

      <!-- üîπ Formulario para agregar un nuevo comentario -->
      <form action="/post/<%= data._id %>/comment" method="POST" class="mb-4">

        <div class="mb-3">
          <label for="author" class="form-label">Nombre</label>
      
          <% if (user) { %>
            <!-- Si el usuario est√° logueado, prellenar y deshabilitar -->
            <input 
              type="text" 
              class="form-control" 
              id="author" 
              name="author" 
              value="<%= user.username %>" 
              readonly
            >
          <% } else { %>
            <!-- Si NO est√° logueado, campo editable -->
            <input 
              type="text" 
              class="form-control" 
              id="author" 
              name="author" 
              placeholder="Tu nombre" 
              required
            >
          <% } %>
      
        </div>
      
        <div class="mb-3">
          <label for="body" class="form-label">Comentario</label>
          <textarea class="form-control" id="body" name="body" rows="3" required></textarea>
        </div>
      
        <button type="submit" class="btn btn-primary">Enviar Comentario</button>
      </form>
      
      

    </div>

    <!-- üîπ Sidebar en el lateral derecho -->
    <div class="col-lg-4 sidebar">
      <%- include('partials/sidebar') %>
    </div>

  </div>
</div>

<!-- üîπ Librer√≠as necesarias -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/dompurify/3.0.3/purify.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/marked/9.0.0/marked.min.js"></script>

<script>
  function toggleReplyForm(commentId) {
    const form = document.getElementById(`reply-form-${commentId}`);
    form.classList.toggle('d-none');
  }
</script>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const articleBodyDiv = document.getElementById("article-body");
    const renderedArticleBodyDiv = document.getElementById("rendered-article-body");

    if (articleBodyDiv && renderedArticleBodyDiv) {
      const markdownContent = decodeURIComponent(articleBodyDiv.dataset.body);
      const htmlContent = marked.parse(markdownContent);
      const sanitizedHtml = DOMPurify.sanitize(htmlContent);
      renderedArticleBodyDiv.innerHTML = sanitizedHtml;
    }
  });
</script>
