<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || 'Editar Suscriptor' %></title>

  <!-- Bootstrap y CSS Admin -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/admin.css">
</head>

<body>

  <!-- Menu superior -->
  <%- include('menu_top_admin') %>

  <div class="container mt-5">

    <!-- Título -->
    <h2 class="mb-4">Editar Suscriptor</h2>

    <!-- ✅ Mensajes de error -->
    <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= errorMessage %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% } %>

    <!-- ✅ Mensajes de éxito -->
    <% if (typeof successMessage !== 'undefined' && successMessage) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= successMessage %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% } %>

    <!-- ✅ Formulario para editar el suscriptor -->
    <form action="/dashboard/newsletter/update-newsletter/<%= subscriber._id %>" method="POST" class="needs-validation mt-3" novalidate>

      <div class="form-group">
        <label for="email">Email del Suscriptor</label>
        <input
          type="email"
          id="email"
          name="email"
          class="form-control"
          value="<%= subscriber.email %>"
          required
        >
      </div>

      <button type="submit" class="btn btn-primary">Guardar Cambios</button>
      <a href="/dashboard/newsletter" class="btn btn-secondary ml-2">← Volver a la lista</a>

    </form>

  </div>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
