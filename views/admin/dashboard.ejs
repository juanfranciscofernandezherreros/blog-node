<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
        /* Estilos globales */
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #1e3c72, #2a5298);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            flex-direction: column;
        }

        /* Estilos para el menú */
        nav {
            width: 100%;
            background: #1e3c72;
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: absolute;
            top: 0;
            left: 0;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
        }

        .menu {
            display: flex;
            gap: 20px;
        }

        .menu a {
            color: white;
            text-decoration: none;
            font-size: 16px;
            transition: color 0.3s ease;
        }

        .menu a:hover {
            color: #f1c40f;
        }

        .logo {
            font-size: 20px;
            font-weight: bold;
            color: white;
        }

        .container {
            background: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 80%;
            text-align: center;
            margin-top: 80px; /* Ajuste para que no quede oculto bajo el menú */
        }

        .admin-title {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .admin-title h2 {
            color: #333;
            margin: 0;
        }

        .button {
            background: #1e3c72;
            color: white;
            padding: 8px 12px;
            text-decoration: none;
            border-radius: 5px;
            transition: background 0.3s ease;
            font-size: 14px;
        }

        .button:hover {
            background: #163c5a;
        }

        .admin-posts {
            list-style: none;
            padding: 0;
        }

        .admin-posts li {
            background: #f9f9f9;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 5px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: transform 0.2s ease;
        }

        .admin-posts li:hover {
            transform: translateX(5px);
        }

        .admin-posts a {
            text-decoration: none;
            color: #1e3c72;
            font-weight: bold;
        }

        .admin-post-controls {
            display: flex;
            gap: 10px;
        }

        .btn {
            background: #1e3c72;
            color: white;
            padding: 6px 12px;
            border: none;
            border-radius: 5px;
            font-size: 14px;
            cursor: pointer;
            transition: background 0.3s ease;
            text-decoration: none;
        }

        .btn:hover {
            background: #163c5a;
        }

        .btn-delete {
            background: #d9534f;
        }

        .btn-delete:hover {
            background: #c9302c;
        }

        form {
            margin: 0;
        }
    </style>
</head>
<body>

    <%- include('menu_top_admin') %>


    <!-- Contenido principal -->
    <div class="container">
        <div class="admin-title">
            <h2>Posts</h2>
            <a href="/dashboard/add-post" class="button">+ Add New</a>
        </div>

        <ul class="admin-posts">
            <% data.forEach(post => { %>
                <li>
                    <a href="/post/<%= post._id %>">
                        <%= post.title %> &nearr;
                    </a>
                    <div class="admin-post-controls">
                        <a href="/dashboard/edit-post/<%= post._id %>" class="btn-edit btn" style="color:white;">Edit</a>
                        
                        <form action="/dashboard/delete-post/<%= post._id %>?_method=DELETE" method="POST">
                            <input type="submit" value="Delete" class="btn-delete btn">
                        </form>
                    </div>
                </li>
            <% }) %>
        </ul>  
    </div>

</body>
</html>
