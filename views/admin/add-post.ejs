<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Crear Nuevo Post - Avanzado con HTML e Imagen</title>

  <!-- CSS Personalizado -->
  <link rel="stylesheet" href="/css/admin.css">

  <!-- CKEditor 5 Classic FULL BUILD -->
  <script src="https://cdn.ckeditor.com/ckeditor5/39.0.1/classic/ckeditor.js"></script>

  <style>
    .ck-editor__editable_inline {
      min-height: 500px;
    }

    .error-message {
      display: none;
      color: #dc3545;
      font-size: 0.9rem;
      margin-top: 5px;
    }

    .input-error {
      border-color: #dc3545;
    }

    .btn {
      background-color: #007bff;
      color: #fff;
      padding: 10px 15px;
      border: none;
      cursor: pointer;
      border-radius: 4px;
    }

    .btn:hover {
      background-color: #0056b3;
    }

    .back-link {
      display: inline-block;
      margin-top: 15px;
      color: #007bff;
    }

    .container {
      max-width: 900px;
      margin: 0 auto;
      padding: 20px;
    }

    label {
      font-weight: bold;
      margin-top: 10px;
    }

    input[type="text"],
    input[type="date"],
    input[type="file"],
    select,
    textarea {
      width: 100%;
      padding: 8px;
      margin-top: 4px;
      margin-bottom: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    #imagePreview {
      margin-top: 10px;
      max-width: 300px;
      max-height: 300px;
      display: none;
    }
  </style>
</head>

<body>

  <%- include('menu_top_admin') %>

  <div class="container">
    <h2>Crear Nuevo Post con Soporte HTML + Imagen</h2>

    <form id="createPostForm" action="/dashboard/add-post" method="POST" enctype="multipart/form-data" novalidate>

      <label for="title">Título:</label>
      <input type="text" name="title" id="title">
      <div id="titleError" class="error-message">El título es obligatorio.</div>

      <label for="summary">Resumen:</label>
      <textarea name="summary" id="summary"></textarea>
      <div id="summaryError" class="error-message">El resumen es obligatorio.</div>

      <label for="body">Contenido del artículo (HTML permitido):</label>
      <textarea name="body" id="body"></textarea>
      <div id="bodyError" class="error-message">El contenido es obligatorio.</div>

      <label for="category">Categoría:</label>
      <select name="category" id="category">
        <option value="">Selecciona una categoría</option>
        <% categories.forEach(category => { %>
          <option value="<%= category._id %>"><%= category.name %></option>
        <% }) %>
      </select>
      <div id="categoryError" class="error-message">Selecciona una categoría.</div>

      <label for="tags">Etiquetas:</label>
      <select name="tags" id="tags" multiple>
        <% tags.forEach(tag => { %>
          <option value="<%= tag._id %>"><%= tag.name %></option>
        <% }) %>
      </select>

      <label for="status">Estado:</label>
      <select name="status" id="status">
        <option value="">Selecciona el estado del artículo</option>
        <option value="draft">Borrador</option>
        <option value="published">Publicado</option>
        <option value="review">En Revisión</option>
      </select>
      <div id="statusError" class="error-message">Selecciona el estado del artículo.</div>

      <label for="publishDate">Fecha de Publicación:</label>
      <input type="date" name="publishDate" id="publishDate">
      <div id="publishDateError" class="error-message">La fecha de publicación es obligatoria.</div>

      <!-- Imagen destacada -->
      <label for="featuredImage">Imagen destacada del post:</label>
      <input type="file" name="featuredImage" id="featuredImage" accept="image/*">
      <img id="imagePreview" src="#" alt="Vista previa de la imagen">

      <p>Estás creando un post como: <strong><%= user.username %></strong></p>

      <button type="submit" class="btn">Crear Post</button>
    </form>

    <a href="/dashboard" class="back-link">← Volver al Dashboard</a>
  </div>

  <!-- JavaScript del formulario -->
  <script>
    let editorBody;

    // Inicializa CKEditor
    ClassicEditor
      .create(document.querySelector('#body'), {
        toolbar: {
          items: [
            'undo', 'redo', '|',
            'heading', '|',
            'bold', 'italic', 'underline', 'strikethrough', '|',
            'bulletedList', 'numberedList', '|',
            'link', 'insertTable', 'blockQuote', 'mediaEmbed', '|',
            'codeBlock', 'htmlEmbed', '|',
            'imageUpload'
          ]
        },
        image: {
          toolbar: [
            'imageTextAlternative', 'imageStyle:full', 'imageStyle:side'
          ]
        },
        table: {
          contentToolbar: ['tableColumn', 'tableRow', 'mergeTableCells']
        },
        mediaEmbed: {
          previewsInData: true
        },
        simpleUpload: {
          uploadUrl: '/dashboard/upload-image',
          headers: {
            // 'Authorization': 'Bearer <token>'
          }
        },
        language: 'es',
        htmlSupport: {
          allow: [
            {
              name: /.*/,
              attributes: true,
              classes: true,
              styles: true
            }
          ]
        },
        htmlEmbed: {
          showPreviews: true
        }
      })
      .then(editor => {
        editorBody = editor;
        console.log('✅ CKEditor cargado correctamente');
      })
      .catch(error => {
        console.error('❌ Error al cargar CKEditor:', error);
      });

    // Validación del formulario
    const form = document.getElementById('createPostForm');

    form.addEventListener('submit', function (e) {
      clearErrors();

      const requiredFields = [
        { id: 'title', errorId: 'titleError' },
        { id: 'summary', errorId: 'summaryError' },
        { id: 'category', errorId: 'categoryError' },
        { id: 'status', errorId: 'statusError' },
        { id: 'publishDate', errorId: 'publishDateError' }
      ];

      let hasErrors = false;

      requiredFields.forEach(field => {
        const element = document.getElementById(field.id);
        if (!element.value.trim()) {
          showError(element, field.errorId);
          hasErrors = true;
        }
      });

      const editorData = editorBody?.getData().trim() || '';
      const bodyTextarea = document.getElementById('body');

      if (!editorData) {
        showError(bodyTextarea, 'bodyError');
        hasErrors = true;
      } else {
        bodyTextarea.value = editorData;
      }

      if (hasErrors) {
        console.warn('❗ Hay errores en el formulario');
        e.preventDefault();
      }
    });

    function showError(element, errorId) {
      element.classList.add('input-error');
      const errorDiv = document.getElementById(errorId);
      errorDiv.style.display = 'block';
    }

    function clearErrors() {
      const errorInputs = document.querySelectorAll('.input-error');
      errorInputs.forEach(input => input.classList.remove('input-error'));

      const errorMessages = document.querySelectorAll('.error-message');
      errorMessages.forEach(msg => msg.style.display = 'none');
    }

    // Vista previa imagen destacada
    const featuredImageInput = document.getElementById('featuredImage');
    const imagePreview = document.getElementById('imagePreview');

    featuredImageInput.addEventListener('change', function () {
      const file = this.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function (e) {
          imagePreview.src = e.target.result;
          imagePreview.style.display = 'block';
        };
        reader.readAsDataURL(file);
      } else {
        imagePreview.style.display = 'none';
      }
    });
  </script>

</body>

</html>
