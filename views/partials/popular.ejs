<div class="post-entry-sidebar">
  <ul>
    <% if (popularPosts.length > 0) { %>
      <% popularPosts.forEach(post => { %>
        <li>
          <a href="/post/<%= post._id %>">
            <img src="<%= post.image || '/images/img_5_sq.jpg' %>" alt="<%= post.title %>" class="me-4 rounded">
            <div class="text">
              <h4><%= post.title %></h4>
              <div class="post-meta">
                <span class="mr-2"><%= new Date(post.createdAt).toLocaleDateString('es-ES') %></span>
                <span class="badge bg-primary"><%= post.commentCount %> comentarios</span>
              </div>
            </div>
          </a>
        </li>
      <% }) %>
    <% } else { %>
      <p class="text-muted">No hay posts populares a√∫n.</p>
    <% } %>
  </ul>
</div>
