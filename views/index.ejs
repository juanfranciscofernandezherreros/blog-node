<div class="container-fluid px-4">
  <div class="row">

    <!-- 游댳 Secci칩n principal de art칤culos -->
    <div class="col-lg-8">
      <% if (data.length > 0) { %>
        <div class="row">
          <% data.forEach((post, index) => { %>
            <div class="col-12 mb-4">
              <div class="blog-entry blog-entry-search-item align-items-start">

                <div class="p-2" style="text-align: justify;">
                  <!-- 游댳 Fecha y Categor칤a -->
                  <span class="date text-muted d-block mb-2">
                    <a href="/articles?date=<%= encodeURIComponent(post.formattedPublishDate) %>">
                      <%= post.formattedPublishDate %>
                    </a>
                    <% if (post.category && post.category.name) { %>
                      <a href="/articles/categories/<%= post.category.slug %>" class="text-primary ms-2">
                        <%= post.category.name %>
                      </a>
                    <% } else { %>
                      <span class="text-muted ms-2">Sin categor칤a</span>
                    <% } %>
                  </span>

                  <!-- 游댳 T칤tulo -->
                  <h2 class="h5 mb-2">
                    <a href="/post/<%= post.slug %>" class="text-dark fw-bold">
                      <%= post.title %>
                    </a>
                  </h2>

                  <!-- 游댳 Autor -->
                  <p class="text-muted small mb-1">
                    <strong>Autor:</strong>
                    <% if (post.author && post.author.username) { %>
                      <a href="/articles/users/<%= post.author.username %>" class="text-primary">
                        <%= post.author.username %>
                      </a>
                    <% } else { %>
                      Desconocido
                    <% } %>
                  </p>

                  <!-- 游댳 Resumen -->
                  <p class="text-muted small mb-2">
                    <%= post.summary %>
                  </p>

                  <!-- 游댳 Tags -->
                  <% if (post.tags && post.tags.length > 0) { %>
                    <div class="mb-2">
                      <% post.tags.forEach(tag => { %>
                        <a href="/articles/tags/<%= tag.slug %>" class="badge bg-secondary text-decoration-none me-1">
                          <%= tag.name %>
                        </a>
                      <% }) %>
                    </div>
                  <% } %>

                  <!-- 游댳 Leer m치s -->
                  <a href="/post/<%= post.slug %>" class="btn btn-sm btn-outline-primary">Leer m치s</a>
                </div>

                <% if (index + 1 !== data.length) { %>
                  <hr class="my-4" />
                <% } %>
              </div>
            </div>

            <% if ((index + 1) % 2 === 0 && index + 1 !== data.length) { %>
              </div><div class="row">
            <% } %>
          <% }) %>
        </div>
      <% } else { %>
        <div class="text-center mt-5">
          <h3 class="text-muted">No hay art칤culos disponibles en este momento.</h3>
          <p class="text-muted">Vuelve m치s tarde para ver nuevas publicaciones.</p>
        </div>
      <% } %>

      <!-- 游댳 Paginaci칩n visible desde 4 art칤culos -->
      <div class="row text-center pt-5 border-top">
        <div class="col-md-12">
          <nav aria-label="Page navigation">
            <div class="d-flex justify-content-center align-items-center gap-2 flex-wrap">
              <span class="text-muted small me-2">P치gina <%= currentPage %> de <%= totalPages %></span>

              <% if (currentPage > 1) { %>
                <a href="/?page=<%= currentPage - 1 %>" class="btn btn-outline-primary btn-sm">Anterior</a>
              <% } %>

              <ul class="pagination mb-0">
                <% for (let i = 1; i <= totalPages; i++) { %>
                  <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                    <a class="page-link" href="/?page=<%= i %>"><%= i %></a>
                  </li>
                <% } %>
              </ul>

              <% if (currentPage < totalPages) { %>
                <a href="/?page=<%= currentPage + 1 %>" class="btn btn-outline-primary btn-sm">Siguiente</a>
              <% } %>
            </div>
          </nav>
        </div>
      </div>
    </div>

    <!-- 游댳 Sidebar -->
    <div class="col-lg-4 sidebar">
      <%- include('partials/sidebar') %>
    </div>

  </div>
</div>
