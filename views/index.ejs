<div class="container">
  <div class="row">    
    
    <!-- 游댳 Secci칩n principal con los art칤culos (8 columnas en pantallas grandes) -->
    <div class="col-lg-8">
      
      <div class="row">
        <% if (data.length > 0) { %> 
          <% data.forEach((post, index) => { %> 
            <div class="col-md-6 mb-4">
              <div class="blog-entry blog-entry-search-item align-items-start">

                <!-- 游댳 Imagen principal del art칤culo -->
                <% if (post.images) { %>
                  <img src="/uploads/<%= post.images %>" alt="Imagen del post" class="img-thumbnail mb-2" style="width: 350px; height: 150px; object-fit: cover;" />
                <% } else { %>
                  <img src="/images/default.jpg" alt="Sin imagen" class="img-thumbnail mb-2" style="width: 350px; height: 150px; object-fit: cover;" />
                <% } %>                

                <div class="p-2">
                  <span class="date text-muted d-block mb-2">
                    <a href="/articles?date=<%= encodeURIComponent(post.formattedPublishDate) %>">
                      <%= post.formattedPublishDate %>
                    </a> 
                    
                    <% if (post.category && post.category.name) { %>
                      <a href="/category/<%= post.category.name %>" class="text-primary ms-2">
                        <%= post.category.name %>
                      </a>
                    <% } else { %>
                      <span class="text-muted ms-2">Sin categor칤a</span>
                    <% } %>
                  </span>

                  <!-- 游댳 T칤tulo -->
                  <h2 class="h5 mb-2">
                    <a href="/post/<%= post._id %>" class="text-dark fw-bold">
                      <%= post.title %>
                    </a>
                  </h2>      

                  <!-- 游댳 Autor -->
                  <p class="text-muted small mb-1">
                    <strong>Autor:</strong> 
                    <% if (post.author) { %>
                      <a href="/users_articles/<%= post.author.username %>" class="text-primary">
                        <%= post.author.username %>
                      </a>
                    <% } else { %>
                      Desconocido
                    <% } %>
                  </p>

                  <!-- 游댳 Resumen -->
                  <p class="text-muted small mb-2">
                    <%= post.summary %>                    
                  </p>

                  <!-- 游댳 Leer m치s -->
                  <a href="/post/<%= post._id %>" class="btn btn-sm btn-outline-primary">Leer m치s</a>

                </div>
              </div>
            </div>

            <!-- 游댳 Cierre y apertura de fila para cada 2 columnas -->
            <% if ((index + 1) % 2 === 0) { %>
              </div><div class="row">
            <% } %>

          <% }) %>
        <% } else { %>
          <div class="text-center mt-5">
            <h3 class="text-muted">No hay art칤culos disponibles en este momento.</h3>
            <p class="text-muted">Vuelve m치s tarde para ver nuevas publicaciones.</p>
          </div>
        <% } %>
      </div>

      <!-- 游댳 Paginaci칩n -->
      <% if (totalPages > 1) { %>
        <div class="row text-center pt-5 border-top">
          <div class="col-md-12">
            <nav aria-label="Page navigation">
              <div class="d-flex justify-content-center">
                
                <% if (currentPage > 1) { %>
                  <a href="/?page=<%= currentPage - 1 %>" class="btn btn-outline-primary me-2">Anterior</a>
                <% } %>

                <ul class="pagination mb-0">
                  <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                      <a class="page-link" href="/?page=<%= i %>"><%= i %></a>
                    </li>
                  <% } %>
                </ul>

                <% if (currentPage < totalPages) { %>
                  <a href="/?page=<%= currentPage + 1 %>" class="btn btn-outline-primary ms-2">Siguiente</a>
                <% } %>

              </div>
            </nav>
          </div>
        </div>
      <% } %>
    </div>

    <!-- 游댳 Sidebar en el lateral derecho -->
    <div class="col-lg-4 sidebar">
      <%- include('partials/sidebar') %>
    </div>

  </div>
</div>
